<!-- Views/Recetas/Edit.cshtml -->
@model PlataformaRecetasIA.Models.Receta
@{
    ViewData["Title"] = "Editar Receta";
}

<h2>Editar Receta</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        <input type="text" class="form-control" id="Nombre" asp-for="Nombre" required />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripción:</label>
        <textarea class="form-control" id="Descripcion" asp-for="Descripcion"></textarea>
    </div>
    <div class="form-group">
        <label for="Porciones">Porciones:</label>
        <input type="number" class="form-control" id="Porciones" asp-for="Porciones" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>

<div id="message" class="text-danger">
    @if (ViewBag.Error != null)
    {
        @ViewBag.Error
    }
</div>