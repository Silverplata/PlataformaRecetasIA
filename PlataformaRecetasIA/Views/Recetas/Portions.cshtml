<!-- Views/Recetas/Portions.cshtml -->
@model List<PlataformaRecetasIA.Models.Receta>
@{
    ViewData["Title"] = "Calculadora de Porciones";
}

<h2>Calculadora de Porciones</h2>
<form asp-action="Portions" method="post">
    <div class="form-group">
        <label for="recetaId">Seleccionar Receta:</label>
        <select class="form-control" id="recetaId" name="recetaId" required>
            <option value="">Selecciona una receta</option>
            @foreach (var receta in Model)
            {
                <option value="@receta.Id">@receta.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="nuevasPorciones">Nuevas Porciones:</label>
        <input type="number" class="form-control" id="nuevasPorciones" name="nuevasPorciones" min="1" required />
    </div>
    <button type="submit" class="btn btn-primary">Calcular</button>
</form>

<div id="message" class="text-danger">
    @if (ViewBag.Error != null)
    {
        @ViewBag.Error
    }
</div>